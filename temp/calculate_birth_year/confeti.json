{
    "engine": "pyspark",
    "extracts": [
        {
            "data_format": "csv",
            "location": "tests/e2e/select/input_data.csv",
            "method": "batch",
            "name": "extract-test",
            "options": {
                "delimiter": ",",
                "header": true,
                "inferSchema": false
            },
            "schema": "tests/e2e/select/input_schema.json"
        }
    ],
    "transforms": [
        {
            "name": "transform-test",
            "upstream_name": "extract-test",
            "recipes": [
                { "recipe": "calculate_birth_year", "arguments": { "age_column": "age", "reference_year": 2025 } }
            ]
        }
    ],
    "loads": [
        {
            "data_format": "csv",
            "location": "tests/e2e/select/csv",
            "method": "batch",
            "mode": "overwrite",
            "name": "load-test",
            "options": {},
            "schema_location": "tests/e2e/select/schema_output.json",
            "upstream_name": "transform-test"
        }
    ]
}