{
    "engine": "pyspark",
    "extracts": [
        {
            "name": "extract-test",
            "method": "batch",
            "data_format": "csv",
            "location": "tests/e2e/select/input_data.csv",
            "schema": "tests/e2e/select/input_schema.json",
            "options": {
                "header": true,
                "inferSchema": false,
                "delimiter": ","
            }
        }
    ],
    "transforms": [
        {
            "name": "transform-test",
            "upstream_name": "extract-test",
            "functions": [
                {"function": "select", "arguments": {"columns": ["name", "age"]}}
            ]
        }
    ],
    "loads": [
        {
            "name": "load-test",
            "upstream_name": "transform-test",
            "method": "batch",
            "data_format": "csv",
            "mode": "overwrite",
            "location": "tests/e2e/select/csv",
            "schema_location": "tests/e2e/select/schema_output.json",
            "options": {}
        }
    ]
}